# Twitch app creds (from dev console)
TWITCH_CLIENT_ID=xxxxxxxx
TWITCH_CLIENT_SECRET=xxxxxxxx

# Must match a redirect URI you set in the Twitch dev console
TWITCH_REDIRECT_URI=http://localhost

# Your channel login (lowercase)
TWITCH_BROADCASTER_LOGIN=yourchannelname

# Minecraft player to receive cubes + tellraw
MC_PLAYER=YourMinecraftName

# Twitch chat -> Minecraft relay
RELAY_TWITCH_CHAT=true
PREFIX_CUBES_LABEL=Cubes
PREFIX_CUBES_COLOR=black
PREFIX_CUBES_ACCENT=aqua
PREFIX_TWITCH_LABEL=Twitch
PREFIX_TWITCH_COLOR=black
PREFIX_TWITCH_ACCENT=dark_purple
CHAT_RELAY_MAXLEN=180

# Set your chance cube block/item id here
# If this doesn't work, open JEI and use the "Copy Item ID" feature, then paste it here.
CUBE_ITEM_ID=chancecubes:chance_cube

# Bits conversion
BITS_PER_CUBE=100

# Sub conversion (per tier)
CUBES_SUB_PRIME=5
CUBES_SUB_T1=5
CUBES_SUB_T2=10
CUBES_SUB_T3=25

# Command prefixes (actual commands, no leading /)
MC_TELLRAW_PREFIX=tellraw
MC_GIVE_PREFIX=give

# Optional execute wrappers examples:
# MC_TELLRAW_PREFIX=execute as YourMinecraftName run tellraw
# MC_GIVE_PREFIX=execute as YourMinecraftName run give

# Live/offline hook prefixes (Option 2)
# Script runs:
#   <MC_LIVE_PREFIX> <MC_PLAYER>    when stream goes LIVE
#   <MC_OFFLINE_PREFIX> <MC_PLAYER> when stream goes OFFLINE
MC_LIVE_PREFIX=streaming
MC_OFFLINE_PREFIX=streaming

# Print every command the computer runs to the CC terminal
DEBUG_COMMANDS=true
